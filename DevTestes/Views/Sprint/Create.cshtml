@model DevTestes.Models.Sprint

@{
    ViewData["Title"] = "Novo registro de sprint";
}

<h1>Novo registro</h1>

<h4>Sprint</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeSprint" class="control-label"></label>
                <input asp-for="NomeSprint" class="form-control" />
                <span asp-validation-for="NomeSprint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
