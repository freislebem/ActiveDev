@model DevTestes.Models.Produto

@{
    ViewData["Title"] = "Excluir registro - Produto Active";
}

<h1>Excluir registro</h1>

<h3>Tem certeza que deseja excluir o registro?</h3>

<div class="alert alert-danger" role="alert">
    Tem certeza que deseja excluir o registro?
</div>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoId" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-success">Cancelar</a>
    </form>
</div>
